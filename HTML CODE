  <meta charset="UTF-8">
  <title>Find the Drug Trafficker</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #f5f8ff;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
    .game-box {
      background: white;
      padding: 30px;
      border-radius: 16px;
      box-shadow: 0 0 20px rgba(0,0,0,0.1);
      width: 90%;
      max-width: 600px;
      text-align: center;
    }
    h1 {
      color: #1e88e5;
    }
    .suspect-list {
      margin-top: 20px;
    }
    .suspect-card {
      background: #e3f2fd;
      padding: 15px;
      margin: 10px 0;
      border-radius: 10px;
      cursor: pointer;
      transition: 0.2s;
    }
    .suspect-card:hover {
      background: #bbdefb;
    }
    #result {
      margin-top: 20px;
      font-weight: bold;
      font-size: 18px;
    }
    #nextBtn {
      margin-top: 15px;
      padding: 10px 20px;
      background: #1e88e5;
      color: white;
      border: none;
      border-radius: 8px;
      display: none;
      cursor: pointer;
    }
  </style>
